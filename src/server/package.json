{
  "name": "tattty-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for TaTTTy authentication and database operations",
  "main": "dist/api.js",
  "scripts": {
    "dev": "tsx watch api.ts",
    "start": "node dist/api.js",
    "build": "tsc --project tsconfig.json && node scripts/postbuild.mjs",
    "test:db": "node test-connection.js",
    "test": "tsx --test tests/otp.test.ts tests/database.test.ts",
    "test:watch": "tsx --watch --test tests/otp.test.ts tests/database.test.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/cookie-parser": "^1.4.6",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^6.4.14",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
